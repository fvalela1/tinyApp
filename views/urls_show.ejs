<html lang="en">
<head>
  <title>TinyApp</title>

  <style>
  	.showURL{
  		float: center;
  		text-align: center;
  		margin-top: 30px;
	}

	h4{
		text-align: center;
	}
  </style>


</head>

<body>

<header>
	<% include ./partials/_header %>
</header>


	<h2 class="showURL"> ShortURL: <%= shortURL %> </h2>
	<h4>Visited <%= visit %> times</h4>
	<form class="showURL" method="POST" action="/urls/<%= shortURL%>?_method=PUT">
		<input id="currentURL" type="text" name="currentURL" placeholder="<%= fullURL%>" style="width: 300px">
		<button type="submit">Update</button>
	</form>


	<form action="/urls">
    <input type="submit" value="Back to Index" />
	</form>



</body>
</html>